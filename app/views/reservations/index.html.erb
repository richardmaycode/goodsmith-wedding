<div class="w-10/12 mx-auto mt-4">
  <div class="flex justify-between">
    <h1 class="font-bold text-4xl">Reservations</h1>
    <%= link_to "Create", new_reservation_path(:passcode => "forever"),class: "text-white bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-300 dark:focus:ring-teal-800 font-medium rounded-lg text-sm px-8 py-4 text-center mb-8" %>
  </div>
  <section class="mx-auto mt-4">
    <table class="w-full border-collapse">
      <thead>
        <tr class="border border-slate-200">
          <th class="border border-slate-200 bg-slate-300 py-4">Name</th>
          <th class="border border-slate-200 bg-slate-300 py-4">Response</th>
          <th class="border border-slate-200 bg-slate-300 py-4">Contact Details</th>
          <th class="border border-slate-200 bg-slate-300 py-4">Food Preferences</th>
          <th class="border border-slate-200 bg-slate-300 py-4">Allegeries</th>
        </tr>
      </thead>
      <tbody>
        <%= render @reservations %>
      </tbody>
    </table>

  </section>
</div>
