
<%= form_with model: @reservation, html: {class: "flex flex-col gap-2 pt-8"} do |form| %>
  <div class="">
    <%= form.label :full_name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.text_field :full_name, autocomplete: "name", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>
  <div class="my-2">
    <%= form.label :response, "Do you plan on attending the ceremony and reception?" , class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"%>
    <%= form.select :response, options_for_select(Reservation.responses.map { |k, v| [k.tr("_", " ").titleize, k] }), { }, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-bold">Please note:</span> Due to limited space we can only allow one guest</p>
  </div>
  <div class="my-2">
    <%= form.label :passcode, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.text_field :passcode,autocomplete:"off", value: params.has_key?(:passcode) ? params[:passcode] : "" , class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">This code is at the bottom of your save the date.</p>
  </div>
  <h2 class="text-3xl mt-2 dark:text-white">Contact Details<h2>
  <fieldset>
    <div>
      <%= form.label :address_one, "Street Address", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :address_one, autocomplete: "street-address", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"%>
    </div>
    <div class="flex gap-8 flex-wrap lg:flex-nowrap">
      <div class="pt-4 lg:basis-4/6 basis-full">
        <%= form.label :city, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.text_field :city, autocomplete: "address-level2", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>
      <div class="pt-4 lg:basis-1/6 basis-full">
        <%= form.label :state, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.select :state, options_for_select(us_states), { autocomplete: "address-level1" } ,class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>
      <div class="pt-4 lg:basis-1/6 basis-full">
        <%= form.label :zipcode, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.text_field :zipcode, autocomplete: "postal-code", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>
    </div>
    <div class="mt-4">
      <%= form.label :phone, "Phone Number", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
      <%= form.text_field :phone, autocomplete: "tel", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    </div>
  </fieldset>

  <h2 class="text-3xl mt-2 dark:text-white">Food Preferences</h2>
  <div class="flex gap-12 flex-wrap md:flex-nowrap">
    <div class="flex items-center pl-4 w-full">
      <%= form.check_box :non_meat, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
      <%= form.label :non_meat, "I prefer a <span class='underline decoration-sky-500/30 text-sky-500 font-bold'>vegetarian/vegan</span> option".html_safe, class: "w-full py-4 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
    </div>
    <div class="flex items-center pl-4 w-full">
      <%= form.check_box :non_gluten, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
      <%= form.label :non_gluten, "I prefer a <span class='underline decoration-sky-500/30 text-sky-500 font-bold'>gluten free</span> option".html_safe, class: "w-full py-4 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
    </div>
  </div>
  <h3 class="text-xl dark:text-white">Known Allergies</h3>
  <div class="grid gap-4 grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 pt-4">
    <%= form.collection_check_boxes :allergen_ids, Allergen.all, :id, :name do |cb| %>
      <div class="flex items-center">
        <%= cb.check_box(class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600") %>
        <%= cb.label(class: "ml-2 text-sm font-medium text-gray-900 dark:text-gray-300") %>
      </div>
    <% end %>
  </div>
  <div class="w-1/2 mx-auto mt-8">
    <%= form.submit @reservation.new_record? ? "Submit RSPV" : "Update RSPV", class: "w-full text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 dark:from-cyan-700 dark:via-cyan-700 dark:to-cyan-800 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
  </div>
<% end %>
</div>