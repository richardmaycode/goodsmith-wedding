<%= turbo_stream.append :memories do %>
  <%= render @memories%>
<% end %>
<%= turbo_stream.replace :pagination do %>
  <% if @pagy.next.present? %>
    <%= turbo_frame_tag :pagination, 
      loading: :lazy,
      src: memories_path(format: :turbo_stream, page: @pagy.next)
    %>
  <% end %>
<% end %>